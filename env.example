# Botking Environment Configuration Template
# Copy this to .env and update values as needed

# Database Configuration
DATABASE_URL="postgresql://botking_user:botking_password@localhost:5432/botking"
DATABASE_URL_TEST="postgresql://botking_user:botking_password@localhost:5432/botking_test"
DATABASE_URL_DEV="postgresql://botking_user:botking_password@localhost:5432/botking_dev"

# Alternative database users for different purposes
DATABASE_URL_APP="postgresql://botking_app:app_password@localhost:5432/botking"
DATABASE_URL_READONLY="postgresql://botking_readonly:readonly_password@localhost:5432/botking"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"

# Redis Database Allocation
REDIS_SESSION_DB="0"    # User sessions
REDIS_CACHE_DB="1"      # Application cache
REDIS_QUEUE_DB="2"      # Job queues
REDIS_REALTIME_DB="3"   # Real-time features
REDIS_ANALYTICS_DB="4"  # Analytics data

# Application Configuration
NODE_ENV="development"
PORT="3000"
APP_NAME="Botking"
APP_VERSION="1.0.0"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Game Configuration
GAME_TICK_RATE="60"           # Game updates per second
MAX_BOTS_PER_USER="100"       # Maximum bots per user
MAX_INVENTORY_SIZE="1000"     # Maximum inventory items
DEFAULT_ENERGY="100"          # Default bot energy
DEFAULT_HEALTH="100"          # Default bot health

# Rate Limiting
RATE_LIMIT_WINDOW="900000"    # 15 minutes in milliseconds
RATE_LIMIT_MAX="100"          # Max requests per window

# Logging
LOG_LEVEL="info"              # error, warn, info, debug
LOG_FORMAT="json"             # json, pretty

# Docker Network (for container communication)
DOCKER_NETWORK="botking-network"

# Development Tools
PGADMIN_EMAIL="admin@botking.dev"
PGADMIN_PASSWORD="admin123"
REDIS_COMMANDER_USER="admin"
REDIS_COMMANDER_PASSWORD="admin123"
