{
  "name": "@botking/time-chain",
  "version": "0.0.0",
  "private": true,
  "description": "Accurate time utilities that work anywhere - timezone detection, formatting, and conversions",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@botking/logger": "workspace:*",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "time",
    "timezone",
    "datetime",
    "formatting",
    "utility",
    "cross-platform"
  ]
}
